size(700, 700);
background(255);

int x1 = 0,	y1 = 0;
int x2 = 0,	y2 = 0;
int x3 = 0,	y3 = 0;
int x4 = 0,	y4 = 0;

fill(255, 0, 0);
for(int i = 0 ; i < 4 ; i++){
	if(mousePressed){
		if(mouseButton == LEFT){
			x1 = mouseX;
			y1 = mouseY;
		}
	}
}

ellipse(x1, y1, 5, 5);
ellipse(x2, y2, 5, 5);
ellipse(x3, y3, 5, 5);
ellipse(x4, y4, 5, 5);
fill(255);

bezier(x1, y1, x2, y2, x3, y3, x4, y4);
